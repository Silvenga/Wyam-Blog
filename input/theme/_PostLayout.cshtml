@{
    Layout = "/theme/_Layout.cshtml";
}

<article class="article">
    <div class="main-container">
        <div class="article-header">
            <h1 class="article-title">
                @Model.String(MetaKeys.Title)
            </h1>
            <div class="article-date">
                @{
                    var changes = Model.Get<int>("Changes");
                    var editText = changes == 1 ? "edit" : "edits";
                }
                @(Model.Get<DateTime>(DocumentKeys.Published).ToString("MMMM dd, yyyy"))
                <span class="article-git">
                    Committed on @(Model.Get<DateTimeOffset>("LastChange").ToString("MM-dd-yyyy")) with hash @(Model.Get<string>("FirstSha")) - @(Model.Get<int>("Changes")) @editText total
                </span>
                      
            </div>
        </div>
        <div class="article-container">
            <div class="article-content flow">
                @RenderBody()
            </div>
            <!--{{#if @@enableDisques}}
            <div class="article-comments">
                <div id="disqus_thread"></div>
            </div>
            <script>
                // Use for the first page load, afterwards everything can be handled in js.
                var disqus_identifier = '{{post.id}}';
            </script>
            {{/if}}-->
        </div>
    </div>
</article>           