@{ 
	string Title = Model.String(MetaKeys.Title); 
    if (Title == "My Blog"){
        Title = "Silvenga";
    }
}

<!DOCTYPE html>
<html>
<head>
    <title>@Title</title>
    <meta http-equiv="content-language" content="en-us">
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content="Wyam" />
    <link rel="stylesheet" href='@Context.GetLink("/fonts.css")'>
    <link rel="stylesheet" href='@Context.GetLink("/main.css")'>
</head>
<body>
    <header class="container-fluid s-nav">
        <nav class="navbar row">
            <div class="nav col-sm d-flex s-nav-left">
                <a class="nav-item nav-link" href='@Context.GetLink("/")'>Silvenga's Blog</a>
            </div>
            <div class="nav col-sm s-nav-right">
                <a class="nav-item nav-link" href='@Context.GetLink("/projects")/'>Projects</a>
                <a class="nav-item nav-link" href='@Context.GetLink("/about")/'>About</a>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="text-center s-footer">
        <hr>
        <span>
            Copyright &copy; Mark Lopez @DateTime.Now.Year.
        </span>
        <span>
            <a href='@Context.GetLink("/humble-disclaimer")'>Disclaimer and Privacy Policy</a>.
        </span>
        <br>
        <span>
            Written under the <a href='https://creativecommons.org/licenses/by-sa/4.0/'>Creative Commons Attribution-ShareAlike 4.0 International License</a>.
        </span>
        <br>
        <span>Generated by Wyam + Webpack.</span>
        <span>
            Made with <span class="heart">&#10084</span> by <a href="https://silvenga.com">Silvenga</a>.
        </span>
    </footer>
	<script async defer type="text/javascript" src="@Context.GetLink("main.js")"></script>
</body>
</html>