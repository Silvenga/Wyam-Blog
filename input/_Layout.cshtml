@{ 
	string Title = Model.String(BlogKeys.Title); 
	string PageTitle = Context.String(BlogKeys.Title) + (string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title);

	var currentYear = DateTime.Now.Year;

	var blog = new 
	{
		title = "Silvenga's Blog'",
		description = "Just another blog for the masses.",
		footer = $"Copyright &copy; Mark Lopez {currentYear}. <a href='/humble-disclaimer/'>My Humble Disclaimer and Privacy Policy</a>.<br>Written under the <a href='https://creativecommons.org/licenses/by-sa/4.0/'>Creative Commons Attribution-ShareAlike 4.0 International License</a>."
	};
}

<!DOCTYPE html>
<html>
<head>
    <title>@blog.title</title>
    <meta http-equiv="content-language" content="en-us">
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--<meta name="description" content="{{meta_description}}" />-->
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        @@import url('/assets/css/style.css');
        @@import 'https://fonts.googleapis.com/css?family=Open+Sans';
    </style>
</head>
<body>
    <header class="header">
        <div class="fade">
            <h1>
                <a href="/">@blog.title</a>
            </h1>
            <p>
                @blog.description
            </p>
        </div>
    </header>
    <div id="ajax-container">
        <div id="ajax-content">
            <main class="content">
                @Html.Partial("partials/_Menu.cshtml")
                <div class="body">
                    @RenderBody()
                </div>
                <div class="hidden full-width">
                    <div id="title">@blog.title</div>
                    <div id="page-id">post.id</div>
                    <div id="page-width"></div>
					@if(IsSectionDefined("Header"))
					{
						@RenderSection("Header")
					}
					else
					{
						@Html.Partial("_Header")                                           
					}

                </div>
            </main>
            <footer class="footer" id="main-footer">
                <div class="footer-wrapper">
                    <div class="footer-container">
						@Html.Raw(blog.footer)
                        <br>
                        Made with &#10084 by <a href="https://silvenga.com">Silvenga</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script async type="text/javascript" src="/assets/js/pack.min.js"></script>
</body>
</html>